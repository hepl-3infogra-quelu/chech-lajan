@import "kouto-swiss"

meyer-reset()
box-sizing-reset()
normalize()

dark = #3f4245
btn = #cd5f5f

html, body
	height 90%
	font-family

body
	background dark
	+media-query( all, max-width 640px )
		font-size .8em

header
	color #fff
	text-align center
	nav
		a
			display block
			float left
			width 50%
			padding 1em

			border 1px solid #000
			border-left none
			color #fff
			text-decoration none
			font-size 1.5em
			&:hover
				text-decoration underline
			+media-query( all, max-width 640px )
				height 70px
				.text
					display none
				&.list
					background url(../img/icon-list.png) center center no-repeat
				&.add
					background url(../img/icon-add.png) center center no-repeat

#map-canvas
	margin 0 auto
	width 100%
	height 100%

.overlay
	position absolute
	top 0
	left 0
	width 100%
	height 100%
	background rgba(0,0,0,0.3)

.container
	position relative
	top 12.5%
	background #fff
	width 75%
	height 75%
	margin 0 auto
	color dark
	overflow-y auto
	z-index 1
	+media-query( all, max-width 640px )
		width 100%
		left 0
	.back
		display block
		background btn
		padding 1em
		text-align center
		text-decoration none
		color #fff
		&:hover
			background lighten(btn, 20%)
	h2
		font-size 1.5em
		margin 1em
		img
			margin-right .5em
	ul
		margin 1em 1.5em
		li
			border-bottom 1px solid rgba(0,0,0, .2)
			&:first-child
				border-top 1px solid rgba(0,0,0, .2)
			&:hover
				background #ededed
			a
				padding 1em
				line-height 2em
				display block
				color dark
				text-decoration none
				strong
					margin-left 1em
				span
					float right
	.info
		text-align center
	.half
		width 50%
		float left
.small
	position absolute
	height auto
	width 50%
	padding-bottom 1.5em
	top 159px
	left 25%
	+media-query( all, max-width 640px )
		width 100%
		left 0
		top 133px
	h2
		display inline-block
		margin 1em 0 .5em
	address
		line-height 2.5em
	#distance
		display inline-block
		padding 8px
		background #2c3e50
		color white
		font-weight bold
		vertical-align middle
	#refresh-me
		position relative
		display inline-block
		padding 15px
		background #2c3e50
		text-decoration none
		vertical-align middle
		span
			display none
		&:after
			content ""
			position absolute
			width 30px
			height 30px
			top 0
			left 0
			background url(../img/icon-refresh.png) no-repeat
	.empty
		line-height 2em
		font-size 1.5em
		color #c0392b
	.problems
		display none
		margin 8px auto 0
		border-top 1px solid #BDC3C7
		padding 0 0 0
		a
			display block
			margin 8px auto 0
			padding 6px 6px
			text-align center
			background lighten( #E67E22, 8% )
			color white
			vertical-align middle
			text-decoration none
			&:first-child
				background lighten( #E74C3C, 8% )
