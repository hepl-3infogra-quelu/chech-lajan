@import "kouto-swiss"

meyer-reset()
box-sizing-reset()
normalize()

dark = #3f4245
btn = #cd5f5f

html, body
	height 90%
	font-family

body
	background dark
	+media-query( all, max-width 640px )
		font-size .8em

header
	color #fff
	text-align center
	nav
		a
			display block
			float left
			width 50%
			padding 1em

			border 1px solid #000
			border-left none
			color #fff
			text-decoration none
			font-size 1.5em
			&:hover
				text-decoration underline
			+media-query( all, max-width 640px )
				height 70px
				.text
					display none
				&.list
					background url(../img/icon-list.png) center center no-repeat
				&.add
					background url(../img/icon-add.png) center center no-repeat

#map-canvas
	margin 0 auto
	width 100%
	height 100%

.overlay
	position absolute
	top 0
	left 0
	width 100%
	height 100%
	background rgba(0,0,0,0.3)

.container
	position relative
	top 12.5%
	background #fff
	width 75%
	height 75%
	margin 0 auto
	color dark
	overflow-y auto
	+media-query( all, max-width 640px )
		width 100%
		left 0
	.back
		display block
		background btn
		padding 1em
		text-align center
		text-decoration none
		color #fff
		&:hover
			background lighten(btn, 20%)
	h2
		font-size 1.5em
		margin 1em
		img
			margin-right .5em
	ul
		margin 1em 1.5em
		li
			border-bottom 1px solid rgba(0,0,0, .2)
			&:first-child
				border-top 1px solid rgba(0,0,0, .2)
			&:hover
				background #ededed
			a
				padding 1em
				line-height 2em
				display block
				color dark
				text-decoration none
				strong
					margin-left 1em
				span
					float right
	.info
		text-align center
.small
	position absolute
	height auto
	width 25%
	padding-bottom 1.5em
	top: 159px
	left 37.75%
	+media-query( all, max-width 640px )
		width 100%
		left 0
		top: 133px
